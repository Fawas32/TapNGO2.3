<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/purple_200"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvTrainCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train Code"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvOriginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTrainCode"
            android:text="Origin Time"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOriginTime"
            android:text="Origin"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvDestTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvTrainCode"
            android:layout_marginTop="5dp"
            android:text="Dest Time"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvDest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDestTime"
            android:text="Destination"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvArriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrigin"
            android:text="Arriving In"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>